{% extends 'base.html.twig' %}

{% block title %}
	Categorie:
	{{category.name}}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('home') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">{{ category.name }}</li>
	</ol>

	<h1>
		{{ category.name }}
	</h1>

	<div class="row">
		{% for product in category.products %}
			<div class="col-3">
				<div class="card">
					<img src="{{ product.mainPicture }}" alt="Image du produit" class="img-fluid">
					<div class="card-body">
						<h4 class="card-title">
							{{ product.name }}({{ product.price / 100 }}
							&euro;)
						</h4>

						<span class="badge badge-info">
							{{ product.category.name }}
						</span>

						<p class="card-text">{{ product.shortDescription }}</p>
						<a href="{{ path('product_show', {category_slug: product.category.slug, slug: product.slug}) }}" class="btn btn-primary">Details</a>
						<a href="#" class="btn btn-success">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
