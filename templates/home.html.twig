{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<h1>
		Nos produits phares
	</h1>
	<div class="row">
		{% for product in products %}
			<div class="col">
				<div class="card">
					<img src="{{ product.mainPicture }}" alt="Image du produit" class="img-fluid">
					<div class="card-body">
						<h4 class="card-title">
							{{ product.name }}({{ product.price / 100 }}
							&euro;)
						</h4>

						<span class="badge badge-info">
							{{ product.category.name }}
						</span>

						<p class="card-text">{{ product.shortDescription }}</p>
						<a href="#" class="btn btn-primary">Details</a>
						<a href="#" class="btn btn-success">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<hr>
	<h2>Un service irreprochable</h2>
	<p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Autem libero harum modi illum molestias doloribus architecto, asperiores doloremque quibusdam molestiae?</p>
	<div class="row">
		{% include "shared/_assurance.html.twig" with {
            color:"primary",
            icon:"fas fa-truck",
            text: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit similique praesentium obcaecati nemo facilis fugiat."
        } %}
		{% include "shared/_assurance.html.twig" with {
            color:"success",
            icon:"fas fa-check",
            text: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit similique praesentium obcaecati nemo facilis fugiat."
        } %}
		{% include "shared/_assurance.html.twig" with {
            color:"danger",
            icon:"fas fa-times",
            text: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit similique praesentium obcaecati nemo facilis fugiat."
        } %}
	</div>
{% endblock %}
